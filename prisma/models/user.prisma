model User {
  id          Int @id @default(autoincrement())
  email       String @unique
  password    String
  name        String?
  image       String?
  isConfirmed Boolean @default(false) @map("is_confirmed")
  isDeleted   Boolean @default(false) @map("is_deleted")
  isBlocked   Boolean @default(false) @map("is_blocked")
  role        EnumUserRole @default(USER)

  accounts Account[]

  createdAt DateTime @default(now()) @map("datetime_create")
  updatedAt DateTime @updatedAt @map("datetime_update")
  deletedAt DateTime? @map("datetime_delete")
  blockedAt DateTime? @map("datetime_block")
  
  @@map("users")
}

enum EnumUserRole {
  USER
  ADMIN
  MODERATOR
}

